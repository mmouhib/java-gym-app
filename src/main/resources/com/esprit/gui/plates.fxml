<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="429.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.gui.controllers.PlatesController">
    <TextField fx:id="id" layoutX="52.0" layoutY="72.0" promptText="id"/>
    <TextField promptText="name" fx:id="name" layoutX="52.0" layoutY="114.0"/>
    <TextField fx:id="calories" promptText="calories" layoutX="52.0" layoutY="156.0"/>
    <TextField fx:id="protein" layoutX="52.0" layoutY="198.0" promptText="protein"/>
    <TextField fx:id="carbs" layoutX="52.0" layoutY="240.0" promptText="carbs"/>
    <TextField fx:id="fat" layoutX="52.0" layoutY="282.0" promptText="fat"/>
    <TextField fx:id="sugar" layoutX="52.0" layoutY="324.0" promptText="sugar"/>

    <TableView fx:id="platesTableView" layoutX="266.0" layoutY="54.0" prefHeight="313.0" prefWidth="527.0">
        <columns>
            <TableColumn prefWidth="75.0" text="id"/>
            <TableColumn prefWidth="75.0" text="name"/>
            <TableColumn prefWidth="75.0" text="Calories"/>
            <TableColumn prefWidth="75.0" text="protein"/>
            <TableColumn prefWidth="75.0" text="Carbs"/>
            <TableColumn prefWidth="75.0" text="Fat"/>
            <TableColumn prefWidth="75.0" text="Sugar"/>
        </columns>
    </TableView>
    <Button fx:id="saveButton" layoutX="53.0" layoutY="371.0" mnemonicParsing="false" onAction="#onSave"
            text="Save"/>
    <Button fx:id="editButton" layoutX="474.0" layoutY="384.0" mnemonicParsing="false" text="Edit"/>
    <Button fx:id="deleteButton" layoutX="534.0" layoutY="384.0" mnemonicParsing="false" text="Delete"/>
    <Button fx:id="resetButton" layoutX="104.0" layoutY="371.0" mnemonicParsing="false" text="Reset" onAction="#clearForm"/>
</AnchorPane>

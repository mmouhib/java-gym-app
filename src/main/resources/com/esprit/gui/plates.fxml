<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="429.0" prefWidth="852.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.gui.controllers.PlatesController">
    <TextField fx:id="id_input" layoutX="52.0" layoutY="72.0" promptText="id"/>
    <TextField fx:id="name_input" promptText="name" layoutX="52.0" layoutY="114.0"/>
    <TextField fx:id="calories_input" promptText="calories" layoutX="52.0" layoutY="156.0"/>
    <TextField fx:id="protein_input" layoutX="52.0" layoutY="198.0" promptText="protein"/>
    <TextField fx:id="carbs_input" layoutX="52.0" layoutY="240.0" promptText="carbs"/>
    <TextField fx:id="fat_input" layoutX="52.0" layoutY="282.0" promptText="fat"/>
    <TextField fx:id="sugar_input" layoutX="52.0" layoutY="324.0" promptText="sugar"/>

    <TableView fx:id="platesTableView" layoutX="266.0" layoutY="54.0" prefHeight="313.0" prefWidth="527.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="75.0" text="id"/>
            <TableColumn fx:id="name" prefWidth="75.0" text="name"/>
            <TableColumn fx:id="calories" prefWidth="75.0" text="calories"/>
            <TableColumn fx:id="protein" prefWidth="75.0" text="protein"/>
            <TableColumn fx:id="carbs" prefWidth="75.0" text="carbs"/>
            <TableColumn fx:id="fat" prefWidth="75.0" text="fat"/>
            <TableColumn fx:id="sugar" prefWidth="75.0" text="sugar"/>
        </columns>
    </TableView>
    <Button fx:id="saveButton" layoutX="53.0" layoutY="371.0" mnemonicParsing="false" onAction="#onSave"
            text="Save"/>
    <Button fx:id="editButton" layoutX="474.0" layoutY="384.0" mnemonicParsing="false" text="Edit" onAction="#editPlate"/>
    <Button fx:id="deleteButton" layoutX="534.0" layoutY="384.0" mnemonicParsing="false" text="Delete"
            onAction="#deletePlate"/>
    <Button fx:id="resetButton" layoutX="104.0" layoutY="371.0" mnemonicParsing="false" text="Reset"
            onAction="#clearForm"/>
</AnchorPane>
